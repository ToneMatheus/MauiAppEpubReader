<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppEpubReader.TextSproutDetailPage"
             Title="TextSproutDetailPage">
    <Grid>
        <Label x:Name="TextLabel" />
   
        <StackLayout Grid.Row="1" Orientation="Horizontal" HorizontalOptions="Center" VerticalOptions="End" Spacing="20">
            <Button Text="Edit" Command="{Binding EditCommand}" />
            <Button Text="Delete" Command="{Binding DelCommand}" />
        </StackLayout>
    </Grid>
</ContentPage>