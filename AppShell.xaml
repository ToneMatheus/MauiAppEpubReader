<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiAppEpubReader.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiAppEpubReader"
    Shell.FlyoutBehavior="Disabled"
    Title="MauiAppEpubReader">

    <Shell.MenuBarItems>
        <MenuBarItem Text="File">
            <MenuFlyoutItem Text="Open" Command="{Binding OpenFileCommand}" />
            <MenuFlyoutSeparator />
            <MenuFlyoutItem Text="Exit" Command="{Binding CloseCommand}" />
        </MenuBarItem>
    </Shell.MenuBarItems>
    
    <ShellContent
        Title=""
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

</Shell>
